<overlap>
    <vertical align="proportional" colour="#003F7FFF">
        <horizontal length="40%" align="centre">
            <space length="10%"/>
            <overlap>
                <horizontal>
                    <space length="300px"/>
                </horizontal>
                <vertical align="down">
                    <image
                            length="80%"
                            smooth="true"
                            align="down">
                        res/textures/title2.png
                    </image>
                </vertical>
            </overlap>
            <space length="10%"/>
        </horizontal>
        <space length="5%"/>
        <horizontal align="centre">
            <space length="30%"/>
            <vertical align="up">
                <button length="min" margin="5px" on_click="start" align="centre">title.start_game</button>
                <button length="min" margin="5px" on_click="lang" align="centre">title.languages</button>
                <button length="min" margin="5px" on_click="exit" align="centre">title.quit</button>
            </vertical>
            <space length="30%"/>
        </horizontal>
    </vertical>
    <vertical align="centre">
        <horizontal length="40%" align="centre">
            <overlap length="80%">
                <space colour="#003F7FFF"/>
                <vertical margin="10px" colour="#0000003F" align="centre">
                    <horizontal length="30%" align="centre">
                        <text colour="#FFFFFFFF" length="min">quit.confirm</text>
                    </horizontal>
                    <button length="min" margin="10px" colour="#FF0000FF" on_click="quit" align="centre">quit.y</button>
                    <button length="min" margin="10px" colour="#00FF00FF" on_click="cancel_quit" align="centre">quit.n</button>
                </vertical>
            </overlap>
        </horizontal>
    </vertical>
</overlap>
