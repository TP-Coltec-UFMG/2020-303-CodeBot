<vertical align="proportional" colour="#003F7FFF">
    <horizontal length="40%" align="centre">
        <space length="10%"/>
        <overlap>
            <horizontal>
                <space length="350px"/>
            </horizontal>
            <vertical align="down">
                <image length="80%" w="400" h="100" align="down" source="title.png"/>
            </vertical>
        </overlap>
        <space length="10%"/>
    </horizontal>
    <space length="5%"/>
    <horizontal align="centre">
        <space length="30%"/>
        <vertical align="up">
            <button length="min" on_click="start">title.start_game</button>
            <space length="10px"/>
            <button length="min" on_click="options">title.options</button>
            <space length="10px"/>
            <button length="min" on_click="lang">title.languages</button>
            <space length="10px"/>
            <button length="min" on_click="exit">title.quit</button>
        </vertical>
        <space length="30%"/>
    </horizontal>
</vertical>